{
  "extends": ["eslint:recommended"],
  "root": true,
  "env": {
    "es2020": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "web3": true,
    "artifacts": true,
    "contract": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "quotes": ["error", "single", "avoid-escape"]
  }
}
