{
  "name": "@powerpool/cvp-vesting-contract",
  "description": "Smart contract provides a temporary lock and following it vesting for the CVP ERC20 tokens received by participants in the Beta and Gamma testing rounds of PowerPool",
  "version": "1.0.0",
  "author": {
    "name": "PowerPool",
    "url": "https://powerpool.finance"
  },
  "bugs": {
    "url": "https://github.com/powerpool-finance/cvp-vesting-contract/issues"
  },
  "devDependencies": {
    "@ethersproject/abstract-signer": "^5.0.1",
    "@ethersproject/bignumber": "^5.0.3",
    "@nomiclabs/buidler": "^1.4.4",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.3",
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@typechain/ethers-v5": "^1.0.0",
    "buidler-contract-sizer": "^1.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "ethereum-waffle": "^3.0.1",
    "ethers": "^5.0.4",
    "fs-extra": "^9.0.1",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.54",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "solc": "0.6.12",
    "solhint": "^3.0.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.9",
    "typechain": "^2.0.0"
  },
  "files": [
    "/contracts"
  ],
  "homepage": "https://github.com/powerpool-finance/cvp-vesting-contract#readme",
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "solidity"
  ],
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/powerpool-finance/cvp-vesting-contract"
  },
  "scripts": {
    "build": "yarn run compile && yarn run typechain",
    "clean": "buidler clean",
    "compile": "buidler compile",
    "coverage": "buidler coverage --solcoverjs ./.solcover.js --network coverage --temp artifacts --testfiles \"./test/**/*.js\"",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:js": "eslint --config .eslintrc.json --ignore-path ./.eslintignore --ext .js .",
    "node": "buidler node",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "buidler test --network buidlerevm",
    "test:local": "buidler test --network local",
    "report:size": "buidler size-contracts",
    "report:gas": "./scripts/gasUsedReport.sh",
    "typechain": "buidler typechain"
  },
  "dependencies": {}
}
